<body>
  <!-- Sidenav -->
  <% include ../partials/sidebar %>
  <!-- Main content -->
  <div class="main-content">
    <!-- Top navbar -->
    <% include ../partials/navbar %>
    <!-- Header -->
    <% include ../partials/header %>
    <!-- Page content -->
    <div class="container-fluid mt--6">
      <!-- Table -->
      <div class="row">
            <div class="col">
              <div class="card card-stats">
                <div class="card-body">
                  <h5 class="card-title text-uppercase text-muted mb-4">Total users</h5>
                  <div class="row">
                    <div class="col">
                      <span class="h2 font-weight-bold"><%= amountUsers %></span>
                    </div>
                    <div class="col">
                      <div class="float-right icon icon-shape bg-gradient-red text-white rounded-circle shadow">
                        <i class="ni ni-circle-08"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="card card-stats">
                <!-- Card body -->
                <div class="card-body">
                  <h5 class="card-title text-uppercase text-muted mb-4">Amount NFTs</h5>
                  <div class="row">
                    <div class="col">
                      <span class="h2 font-weight-bold mb-0"><%= amountNFTs %> </span>
                    </div>
                    <div class="col">
                      <div class="float-right icon icon-shape bg-gradient-orange text-white rounded-circle shadow">
                        <i class="ni ni-image"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="card card-stats">
                <!-- Card body -->
                <div class="card-body">
                  <h5 class="card-title text-uppercase text-muted mb-4">Volumn Trade</h5>
                  <div class="row">
                    <div class="col">
                      <span class="h2 font-weight-bold mb-0"><%= amountVol %></span>
                    </div>
                    <div class="col">
                      <div class="float-right icon icon-shape bg-gradient-green text-white rounded-circle shadow">
                        <i class="ni ni-chart-bar-32"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="card card-stats">
                <!-- Card body -->
                <div class="card-body">
                  <h5 class="card-title text-uppercase text-muted mb-4">Total Market</h5>
                  <div class="row">
                    <div class="col">
                      <span class="h2 font-weight-bold mb-0"><%= totalVol %></span>
                    </div>
                    <div class="col">
                      <div class="float-right icon icon-shape bg-gradient-info text-white rounded-circle shadow">
                        <i class="ni ni-chart-bar-32"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>

        <div class="row mt-5">
          <div class="col-xl-6 mb-5 mb-xl-0">
            <div class="card shadow">
              <div class="card-header border-0">
                <div class="row align-items-center">
                  <div class="col">
                    <h3 class="mb-0">NFT News</h3>
                  </div>
                  <div class="col text-right">
                    <a href="/nfts" class="btn btn-sm btn-primary">See all</a>
                  </div>
                </div>
              </div>
              <div class="table-responsive">
                <!-- Projects table -->
                <table class="table align-items-center table-flush">
                  <thead class="thead-light">
                    <tr>
                      <th scope="col">Token</th>
                      <th scope="col">Owner</th>
                      <th scope="col">Time</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% newNFT.forEach(function(nft){ %>
                      <tr>
                        <td><%= nft.token_id %></td>
                        <td><%= nft.owner.substring(0, 5)+'...'+nft.owner.substring(nft.owner.length - 5, nft.owner.length) %></td>
                        <td><%= nft.created_at.toLocaleString() %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="col-xl-6">
            <div class="card shadow">
              <div class="card-header border-0">
                <div class="row align-items-center">
                  <div class="col">
                    <h3 class="mb-0">Trade NFT</h3>
                  </div>
                </div>
              </div>
              <div class="table-responsive">
                <!-- Projects table -->
                <table class="table align-items-center table-flush">
                  <thead class="thead-light">
                    <tr>
                      <th scope="col">From</th>
                      <th scope="col">To</th>
                      <th scope="col">NFT</th>
                      <th scope="col">Price</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% trades.forEach(function(trade){ %>
                      <tr>
                        <td><%= trade.from.substring(0, 4)+'...'+trade.from.substring(trade.from.length - 4, trade.from.length) %></td>
                        <td><%= trade.from.substring(0, 4)+'...'+trade.from.substring(trade.from.length - 4, trade.from.length) %></td>
                        <td><%= trade.token_id %></td>
                        <td><%= trade.price %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
      <!-- Footer -->
      <% include ../partials/footer %>
    </div>
  </div>
  <!-- Include scripts -->
  <% include ../partials/scripts %>
</body>

